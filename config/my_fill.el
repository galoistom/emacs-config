(defun useful_begin (title)
  (save-excursion
    (backward-char 1)
    (insert title)
    (forward-char 6)
    (insert title)))

(defun take_fragment (n)
  (let* (
	 (end-pos (point))
	 (start-pos (max 0 (- (+ 1 (point)) n))))
    (buffer-substring start-pos end-pos)))

(defun myfill ()
  "Auto change the content to tex command"
	(interactive)
	(let ((mark t))
	(dotimes (i 5)
	(let* ((txt (take_fragment (- 6 i)))
		(res (assoc txt input-config-alist)))
	(when (and res mark)
		(setq mark nil)
		(backward-char)
		(let ((result (cdr res)))
			(forward-char 1)
			(delete-char (- (length txt)))
			(dolist (command result)
			  (funcall command)))))
	)))
;(global-set-key (kbd "C-f") nil)
;(global-set-key (kbd "C-f") 'myfill)
(provide 'myfill)
