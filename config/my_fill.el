		    (insert "\\limits"))))
	("k" . ((lambda ()
		  (insert "^{}")
		  (backward-char 1))))
	("a" . ((lambda ()
		  (insert "\\alpha ")
		  )))
        ("b" . ((lambda ()
		  (insert "\\beta ")
		  )))
        ("t" . ((lambda ()
		  (insert "\\theta ")
		  )))
	("bar" . ((lambda ()
		    (insert "\\overline{}")
		    (backward-char 1))))
